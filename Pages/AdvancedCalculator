import React, { useState, useMemo } from "react";
import { base44 } from "@/api/base44Client";
import { useQuery, useQueryClient } from "@tanstack/react-query";
import { useNavigate } from "react-router-dom";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Button } from "@/components/ui/button";
import { ArrowLeft, Plus, Save, RotateCcw, Calculator, Target } from "lucide-react";
import { toast } from "sonner";
import { motion } from "framer-motion";

import BetInput from "../components/calculator/BetInput";
import CalculatorResults from "../components/calculator/CalculatorResults";

export default function AdvancedCalculatorPage() {
  const navigate = useNavigate();
  const queryClient = useQueryClient();

  const [eventName, setEventName] = useState("");
  const [totalInvestimento, setTotalInvestimento] = useState("");
  const [bets, setBets] = useState([
    { odds: '', stake: '', bookmaker_id: '', selection: '', calculated_stake: null, calculated_return: null },
    { odds: '', stake: '', bookmaker_id: '', selection: '', calculated_stake: null, calculated_return: null }
  ]);
  const [salvando, setSalvando] = useState(false);

  // Carregar casas
  const { data: bookmakers = [] } = useQuery({
    queryKey: ['bookmakers'],
    queryFn: async () => {
      const user = await base44.auth.me();
      return await base44.entities.Bookmaker.filter({ created_by: user.email });
    }
  });

  // C√°lculo da Surebet
  const resultado = useMemo(() => {
    const total = parseFloat(totalInvestimento) || 0;
    
    // Validar todas as odds
    const oddsValidas = bets.every(b => {
      const odd = parseFloat(b.odds);
      return !isNaN(odd) && odd >= 1;
    });

    if (total === 0 || !oddsValidas || bets.length < 2) {
      return null;
    }

    const odds = bets.map(b => parseFloat(b.odds));

    // Soma dos inversos (fundamental para arbitragem)
    const somaInversos = odds.reduce((sum, odd) => sum + (1 / odd), 0);
    const isSurebet = somaInversos < 1;
    const margem = ((somaInversos - 1) * 100).toFixed(2);

    // Distribui√ß√£o ideal dos valores
    const stakes = odds.map(odd => (total / somaInversos) * (1 / odd));
    const retornos = stakes.map((stake, idx) => stake * odds[idx]);

    // Lucro l√≠quido (igual em todos os cen√°rios se for surebet)
    const menorRetorno = Math.min(...retornos);
    const lucroLiquido = menorRetorno - total;
    const roi = ((lucroLiquido / total) * 100).toFixed(2);

    // Atualizar apostas com valores calculados
    const apostasCalculadas = bets.map((bet, idx) => ({
      ...bet,
      calculated_stake: stakes[idx].toFixed(2),
      calculated_return: retornos[idx].toFixed(2),
      odds: odds[idx].toFixed(2),
      bookmaker_name: bookmakers.find(b => b.id === bet.bookmaker_id)?.name || null
    }));

    // Criar cen√°rios
    const cenarios = bets.map((bet, idx) => ({
      nome: `Aposta ${idx + 1} acerta`,
      lucro: (retornos[idx] - total).toFixed(2)
    }));

    return {
      lucroLiquido: lucroLiquido.toFixed(2),
      roi,
      isSurebet,
      totalInvestimento: total.toFixed(2),
      apostas: apostasCalculadas,
      cenarios,
      somaInversos: somaInversos.toFixed(4),
      margem
    };
  }, [totalInvestimento, bets, bookmakers]);

  // Atualizar apostas com valores calculados
  React.useEffect(() => {
    if (resultado && resultado.apostas) {
      setBets(prev => prev.map((bet, idx) => ({
        ...bet,
        calculated_stake: resultado.apostas[idx].calculated_stake,
        calculated_return: resultado.apostas[idx].calculated_return
      })));
    }
  }, [resultado]);

  const handleBetChange = (index, field, value) => {
    setBets(prev => {
      const updated = [...prev];
      updated[index] = { ...updated[index], [field]: value };
      return updated;
    });
  };

  const addBet = () => {
    const colors = ['blue', 'purple', 'green', 'orange', 'pink'];
    setBets(prev => [...prev, { 
      odds: '', 
      stake: '', 
      bookmaker_id: '', 
      selection: '', 
      calculated_stake: null, 
      calculated_return: null,
      color: colors[prev.length % colors.length]
    }]);
  };

  const removeBet = (index) => {
    if (bets.length <= 2) {
      toast.error('√â necess√°rio ter pelo menos 2 apostas');
      return;
    }
    setBets(prev => prev.filter((_, i) => i !== index));
  };

  const limpar = () => {
    setEventName("");
    setTotalInvestimento("");
    setBets([
      { odds: '', stake: '', bookmaker_id: '', selection: '', calculated_stake: null, calculated_return: null },
      { odds: '', stake: '', bookmaker_id: '', selection: '', calculated_stake: null, calculated_return: null }
    ]);
  };

  const salvarOperacao = async () => {
    if (!resultado || !resultado.isSurebet || !eventName) {
      toast.error('Configure uma surebet v√°lida e adicione um nome para o evento');
      return;
    }

    setSalvando(true);
    try {
      const user = await base44.auth.me();

      // Criar primeira aposta (principal)
      const mainBet = resultado.apostas[0];
      await base44.entities.Bet.create({
        event_name: eventName,
        bookmaker_id: mainBet.bookmaker_id,
        stake: parseFloat(mainBet.calculated_stake),
        odds: parseFloat(mainBet.odds),
        status: 'pendente',
        procedure_type: 'surebet',
        market: 'Surebet Avan√ßada',
        selection: mainBet.selection || 'Op√ß√£o 1',
        event_date: new Date().toISOString(),
        potential_net_profit: parseFloat(resultado.lucroLiquido),
        created_by: user.email
      });

      // Criar apostas de prote√ß√£o
      for (let i = 1; i < resultado.apostas.length; i++) {
        const bet = resultado.apostas[i];
        await base44.entities.Bet.create({
          event_name: eventName,
          bookmaker_id: bet.bookmaker_id,
          stake: parseFloat(bet.calculated_stake),
          odds: parseFloat(bet.odds),
          status: 'pendente',
          procedure_type: 'surebet',
          bet_type: 'protecao',
          market: 'Surebet Avan√ßada',
          selection: bet.selection || `Op√ß√£o ${i + 1}`,
          event_date: new Date().toISOString(),
          potential_net_profit: parseFloat(resultado.lucroLiquido),
          protection_bookmakers: resultado.apostas.filter((_, idx) => idx !== i).map(p => ({
            bookmaker_id: p.bookmaker_id,
            stake: parseFloat(p.calculated_stake),
            odds: parseFloat(p.odds),
            status: 'pendente'
          })),
          created_by: user.email
        });
      }

      queryClient.invalidateQueries({ queryKey: ['bets'] });
      
      toast.success(`Surebet com ${resultado.apostas.length} apostas salva com sucesso!`);
      
      setTimeout(() => {
        navigate('/Bets');
      }, 1000);
      
    } catch (error) {
      console.error('Erro ao salvar:', error);
      toast.error('Erro ao salvar opera√ß√£o');
    } finally {
      setSalvando(false);
    }
  };

  const colors = ['blue', 'purple', 'green', 'orange', 'pink'];

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950 p-4 md:p-8">
      <div className="max-w-7xl mx-auto">
        {/* Header */}
        <div className="mb-8 flex items-center gap-4">
          <Button
            variant="outline"
            size="icon"
            onClick={() => navigate('/SurebetCalculator')}
            className="bg-slate-800 border-slate-700 text-white hover:bg-slate-700"
          >
            <ArrowLeft className="w-5 h-5" />
          </Button>
          <div>
            <h1 className="text-3xl md:text-4xl font-bold text-white flex items-center gap-3">
              <Calculator className="w-10 h-10 text-purple-500" />
              Calculadora Avan√ßada
            </h1>
            <p className="text-slate-400 mt-2">
              Arbitragem com m√∫ltiplas apostas - Baseado em Surebet.com
            </p>
          </div>
        </div>

        <div className="grid lg:grid-cols-[1fr,500px] gap-6">
          {/* CONFIGURA√á√ÉO */}
          <div className="space-y-6">
            {/* Evento e Investimento */}
            <Card className="bg-slate-800/50 border-slate-700 shadow-2xl">
              <CardHeader className="border-b border-slate-700">
                <CardTitle className="text-white flex items-center gap-2">
                  <Target className="w-5 h-5 text-purple-400" />
                  Configura√ß√£o Geral
                </CardTitle>
              </CardHeader>
              <CardContent className="pt-6 space-y-4">
                <div>
                  <Label className="text-slate-300 font-semibold">Nome do Evento</Label>
                  <Input
                    value={eventName}
                    onChange={(e) => setEventName(e.target.value)}
                    placeholder="Ex: Flamengo x Palmeiras"
                    className="mt-2 bg-slate-900 border-slate-700 text-white h-12"
                  />
                </div>
                <div>
                  <Label className="text-slate-300 font-semibold">Investimento Total (R$)</Label>
                  <Input
                    type="number"
                    step="0.01"
                    value={totalInvestimento}
                    onChange={(e) => setTotalInvestimento(e.target.value)}
                    placeholder="0.00"
                    className="mt-2 bg-slate-900 border-slate-700 text-white h-14 text-xl font-bold"
                  />
                  <p className="text-xs text-slate-400 mt-1">
                    üí° Valor total que ser√° distribu√≠do entre todas as apostas
                  </p>
                </div>
              </CardContent>
            </Card>

            {/* Lista de Apostas */}
            <motion.div layout className="space-y-4">
              {bets.map((bet, index) => (
                <motion.div
                  key={index}
                  initial={{ opacity: 0, y: 20 }}
                  animate={{ opacity: 1, y: 0 }}
                  exit={{ opacity: 0, y: -20 }}
                  transition={{ duration: 0.3 }}
                >
                  <BetInput
                    bet={bet}
                    index={index}
                    bookmakers={bookmakers}
                    onChange={handleBetChange}
                    onRemove={removeBet}
                    showRemove={bets.length > 2}
                    color={colors[index % colors.length]}
                  />
                </motion.div>
              ))}
            </motion.div>

            {/* Bot√µes de A√ß√£o */}
            <div className="flex gap-3">
              <Button
                onClick={addBet}
                variant="outline"
                className="flex-1 border-purple-700 text-purple-300 hover:bg-purple-900/20 h-12 font-semibold"
              >
                <Plus className="w-5 h-5 mr-2" />
                Adicionar Aposta
              </Button>
              <Button
                onClick={limpar}
                variant="outline"
                className="border-slate-700 text-slate-300 hover:bg-slate-700 h-12"
              >
                <RotateCcw className="w-5 h-5" />
              </Button>
            </div>
          </div>

          {/* RESULTADOS */}
          <div className="lg:sticky lg:top-8 lg:self-start">
            <Card className="bg-slate-800/50 border-slate-700 shadow-2xl">
              <CardHeader className="border-b border-slate-700">
                <CardTitle className="text-white flex items-center gap-2">
                  <Calculator className="w-5 h-5 text-purple-400" />
                  Resultados
                </CardTitle>
              </CardHeader>
              <CardContent className="pt-6">
                <CalculatorResults resultado={resultado} />

                {/* Bot√£o Salvar */}
                {resultado && resultado.isSurebet && (
                  <Button
                    onClick={salvarOperacao}
                    disabled={salvando || !eventName}
                    className="w-full mt-6 bg-gradient-to-r from-green-600 to-green-500 hover:from-green-700 hover:to-green-600 h-14 font-semibold text-lg"
                  >
                    {salvando ? (
                      <div className="flex items-center gap-2">
                        <div className="w-5 h-5 border-2 border-white border-t-transparent rounded-full animate-spin" />
                        Salvando...
                      </div>
                    ) : (
                      <>
                        <Save className="w-5 h-5 mr-2" />
                        Salvar Opera√ß√£o
                      </>
                    )}
                  </Button>
                )}
              </CardContent>
            </Card>
          </div>
        </div>
      </div>
    </div>
  );
}
