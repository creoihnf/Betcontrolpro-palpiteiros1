
import React, { useState, useEffect } from "react";
import { useSearchParams } from "react-router-dom";
import { base44 } from "@/api/base44Client";
import { useQuery, useMutation, useQueryClient } from "@tanstack/react-query";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { Avatar, AvatarFallback, AvatarImage } from "@/components/ui/avatar";
import { Tabs, TabsContent, TabsList, TabsTrigger } from "@/components/ui/tabs";
import {
  User,
  MapPin,
  Globe,
  Calendar,
  UserPlus,
  UserMinus,
  Settings,
  TrendingUp,
  Trophy,
  Target,
  Activity,
  Lock
} from "lucide-react";
import { toast } from "sonner";
import { format } from "date-fns";
import { ptBR } from "date-fns/locale";
import PostCard from "../components/community/PostCard";
import PrivacySettingsDialog from "../components/community/PrivacySettingsDialog";
import { motion } from "framer-motion";

/**
 * üë§ PERFIL DE USU√ÅRIO
 * 
 * - Estat√≠sticas p√∫blicas (se permitido)
 * - Posts p√∫blicos
 * - Seguir/Deixar de seguir
 * - Controles de privacidade (pr√≥prio perfil)
 */

export default function UserProfilePage() {
  const [searchParams] = useSearchParams();
  const queryClient = useQueryClient();
  const [currentUser, setCurrentUser] = useState(null);
  const [privacyDialogOpen, setPrivacyDialogOpen] = useState(false);
  
  const username = searchParams.get('username');

  useEffect(() => {
    loadUser();
  }, []);

  const loadUser = async () => {
    const user = await base44.auth.me();
    setCurrentUser(user);
  };

  // ‚úÖ BUSCAR PERFIL
  const { data: profile, isLoading } = useQuery({
    queryKey: ['user-profile', username],
    queryFn: async () => {
      const profiles = await base44.entities.UserProfile.filter({
        username: username
      });
      return profiles[0] || null;
    },
    enabled: !!username
  });

  // ‚úÖ VERIFICAR SE EST√Å SEGUINDO
  const { data: isFollowing = false } = useQuery({
    queryKey: ['is-following', currentUser?.email, profile?.user_email],
    queryFn: async () => {
      if (!currentUser || !profile) return false;
      const follows = await base44.entities.UserFollow.filter({
        follower_email: currentUser.email,
        following_email: profile.user_email
      });
      return follows.length > 0;
    },
    enabled: !!currentUser && !!profile
  });

  // ‚úÖ SEGUIR/DEIXAR DE SEGUIR
  const followMutation = useMutation({
    mutationFn: async () => {
      if (isFollowing) {
        // Deixar de seguir
        const follows = await base44.entities.UserFollow.filter({
          follower_email: currentUser.email,
          following_email: profile.user_email
        });
        if (follows[0]) {
          await base44.entities.UserFollow.delete(follows[0].id);
        }
        // Atualizar contadores
        await base44.entities.UserProfile.update(profile.id, {
          followers_count: Math.max(0, (profile.followers_count || 0) - 1)
        });
      } else {
        // Seguir
        await base44.entities.UserFollow.create({
          follower_email: currentUser.email,
          following_email: profile.user_email,
          followed_at: new Date().toISOString(),
          created_by: currentUser.email
        });
        // Atualizar contadores
        await base44.entities.UserProfile.update(profile.id, {
          followers_count: (profile.followers_count || 0) + 1
        });
      }
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['is-following'] });
      queryClient.invalidateQueries({ queryKey: ['user-profile'] });
      toast.success(isFollowing ? '‚úÖ Deixou de seguir' : '‚úÖ Seguindo!');
    }
  });

  // ‚úÖ BUSCAR POSTS DO USU√ÅRIO
  const { data: userPosts = [] } = useQuery({
    queryKey: ['user-posts', profile?.user_email],
    queryFn: async () => {
      if (!profile) return [];
      
      const posts = await base44.entities.CommunityPost.filter({
        author_email: profile.user_email,
        status: 'published'
      });

      // Filtrar por visibilidade
      return posts.filter(p => {
        if (p.visibility === 'public') return true;
        if (p.visibility === 'followers_only' && isFollowing) return true;
        if (currentUser?.email === profile.user_email) return true;
        return false;
      }).sort((a, b) => new Date(b.created_date) - new Date(a.created_date));
    },
    enabled: !!profile
  });

  const isOwnProfile = currentUser?.email === profile?.user_email;
  const canViewStats = profile?.privacy_settings?.stats_visible || isOwnProfile;
  const canFollow = profile?.privacy_settings?.allow_follow && !isOwnProfile;

  if (!profile && !isLoading) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950 p-6 flex items-center justify-center">
        <Card className="bg-slate-800/50 border-slate-700 max-w-md">
          <CardContent className="text-center py-12">
            <User className="w-16 h-16 text-slate-600 mx-auto mb-4" />
            <p className="text-white text-lg mb-2">Perfil n√£o encontrado</p>
            <p className="text-slate-400">Este usu√°rio n√£o existe ou tornou o perfil privado</p>
          </CardContent>
        </Card>
      </div>
    );
  }

  return (
    <div style={{ width: '100%', minHeight: '100vh', padding: '24px 32px', background: '#0a0a0a' }}>
      <div style={{ maxWidth: '1400px', margin: '0 auto' }}>

        {/* HEADER */}
        <motion.div 
          style={{ marginBottom: '32px' }}
          initial={{ opacity: 0, y: -20 }}
          animate={{ opacity: 1, y: 0 }}
        >
          <div>
            <h1 style={{
              fontSize: '32px',
              fontWeight: 900,
              letterSpacing: '-1px',
              color: '#ffffff',
              marginBottom: '8px'
            }}>
              Meu Perfil
            </h1>
            <p style={{ color: 'rgba(176, 176, 176, 0.8)', fontSize: '14px', fontWeight: 500 }}>
              {currentUser?.email}
            </p>
          </div>
        </motion.div>

        {/* CONTE√öDO */}
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.1 }}
        >
          <div className="space-y-6">
            {/* CAPA E PERFIL */}
            <Card className="bg-slate-800/50 border-slate-700 overflow-hidden">
              {/* CAPA */}
              <div
                className="h-32 bg-gradient-to-r from-blue-600 to-purple-600"
                style={profile?.cover_url ? { backgroundImage: `url(${profile.cover_url})`, backgroundSize: 'cover' } : {}}
              />

              <CardContent className="relative pt-16">
                {/* AVATAR */}
                <Avatar className="w-24 h-24 absolute -top-12 left-6 border-4 border-slate-900">
                  <AvatarImage src={profile?.avatar_url} />
                  <AvatarFallback className="bg-blue-600 text-white text-2xl">
                    {profile?.username?.substring(0, 2).toUpperCase()}
                  </AvatarFallback>
                </Avatar>

                {/* BOT√ïES DE A√á√ÉO */}
                <div className="flex justify-end gap-2 mb-4">
                  {isOwnProfile ? (
                    <Button
                      onClick={() => setPrivacyDialogOpen(true)}
                      variant="outline"
                      className="border-slate-700 text-white"
                    >
                      <Settings className="w-4 h-4 mr-2" />
                      Editar Perfil
                    </Button>
                  ) : canFollow && (
                    <Button
                      onClick={() => followMutation.mutate()}
                      disabled={followMutation.isPending}
                      className={isFollowing ? 'bg-slate-700' : 'bg-blue-600 hover:bg-blue-700'}
                    >
                      {isFollowing ? (
                        <>
                          <UserMinus className="w-4 h-4 mr-2" />
                          Deixar de Seguir
                        </>
                      ) : (
                        <>
                          <UserPlus className="w-4 h-4 mr-2" />
                          Seguir
                        </>
                      )}
                    </Button>
                  )}
                </div>

                {/* INFO */}
                <div>
                  <div className="flex items-center gap-2 mb-2">
                    <h1 className="text-2xl font-bold text-white">
                      {profile?.display_name || profile?.username}
                    </h1>
                    {profile?.verification_status === 'verified' && (
                      <Badge className="bg-blue-600">‚úì Verificado</Badge>
                    )}
                    {profile?.verification_status === 'expert' && (
                      <Badge className="bg-purple-600">‚≠ê Expert</Badge>
                    )}
                  </div>

                  <p className="text-slate-400 mb-3">@{profile?.username}</p>

                  {profile?.bio && (
                    <p className="text-white mb-4">{profile.bio}</p>
                  )}

                  <div className="flex flex-wrap gap-4 text-sm text-slate-400 mb-4">
                    {profile?.location && (
                      <div className="flex items-center gap-1">
                        <MapPin className="w-4 h-4" />
                        {profile.location}
                      </div>
                    )}
                    {profile?.website && (
                      <a
                        href={profile.website}
                        target="_blank"
                        rel="noopener noreferrer"
                        className="flex items-center gap-1 hover:text-blue-400"
                      >
                        <Globe className="w-4 h-4" />
                        Website
                      </a>
                    )}
                    {profile?.created_date && (
                      <div className="flex items-center gap-1">
                        <Calendar className="w-4 h-4" />
                        Desde {format(new Date(profile.created_date), 'MMMM yyyy', { locale: ptBR })}
                      </div>
                    )}
                  </div>

                  {/* CONTADORES */}
                  <div className="flex gap-6 text-sm">
                    <div>
                      <span className="font-bold text-white">{profile?.following_count || 0}</span>
                      <span className="text-slate-400 ml-1">seguindo</span>
                    </div>
                    <div>
                      <span className="font-bold text-white">{profile?.followers_count || 0}</span>
                      <span className="text-slate-400 ml-1">seguidores</span>
                    </div>
                    <div>
                      <span className="font-bold text-white">{profile?.posts_count || 0}</span>
                      <span className="text-slate-400 ml-1">posts</span>
                    </div>
                  </div>
                </div>
              </CardContent>
            </Card>

            {/* ESTAT√çSTICAS */}
            {canViewStats && profile?.stats?.total_bets > 0 && (
              <Card className="bg-gradient-to-br from-blue-900/20 to-purple-900/20 border-blue-700/50">
                <CardHeader>
                  <CardTitle className="text-white flex items-center gap-2">
                    <Trophy className="w-5 h-5 text-yellow-400" />
                    Estat√≠sticas de Apostas
                  </CardTitle>
                </CardHeader>
                <CardContent>
                  <div className="grid grid-cols-2 md:grid-cols-4 gap-4">
                    <div className="bg-slate-900/50 rounded-lg p-4 text-center">
                      <Activity className="w-6 h-6 text-blue-400 mx-auto mb-2" />
                      <p className="text-2xl font-bold text-white">{profile.stats.total_bets}</p>
                      <p className="text-slate-400 text-sm">Total de Apostas</p>
                    </div>

                    <div className="bg-slate-900/50 rounded-lg p-4 text-center">
                      <TrendingUp className="w-6 h-6 text-green-400 mx-auto mb-2" />
                      <p className="text-2xl font-bold text-green-400">
                        {profile.stats.roi?.toFixed(1)}%
                      </p>
                      <p className="text-slate-400 text-sm">ROI</p>
                    </div>

                    <div className="bg-slate-900/50 rounded-lg p-4 text-center">
                      <Target className="w-6 h-6 text-purple-400 mx-auto mb-2" />
                      <p className="text-2xl font-bold text-white">
                        {profile.stats.win_rate?.toFixed(1)}%
                      </p>
                      <p className="text-slate-400 text-sm">Win Rate</p>
                    </div>

                    <div className="bg-slate-900/50 rounded-lg p-4 text-center">
                      <Trophy className="w-6 h-6 text-yellow-400 mx-auto mb-2" />
                      <p className="text-2xl font-bold text-white">
                        R$ {profile.stats.total_profit?.toFixed(2) || '0.00'}
                      </p>
                      <p className="text-slate-400 text-sm">Lucro Total</p>
                    </div>
                  </div>
                </CardContent>
              </Card>
            )}

            {!canViewStats && !isOwnProfile && (
              <Card className="bg-slate-800/50 border-slate-700">
                <CardContent className="text-center py-8">
                  <Lock className="w-12 h-12 text-slate-600 mx-auto mb-3" />
                  <p className="text-slate-400">
                    Este usu√°rio mant√©m suas estat√≠sticas privadas
                  </p>
                </CardContent>
              </Card>
            )}

            {/* POSTS */}
            <Card className="bg-slate-800/50 border-slate-700">
              <CardHeader>
                <CardTitle className="text-white">Posts</CardTitle>
              </CardHeader>
              <CardContent className="space-y-4">
                {userPosts.length === 0 ? (
                  <div className="text-center py-12">
                    <p className="text-slate-400">Nenhum post ainda</p>
                  </div>
                ) : (
                  userPosts.map((post) => (
                    <PostCard key={post.id} post={post} currentUser={currentUser} />
                  ))
                )}
              </CardContent>
            </Card>
          </div>
        </motion.div>
      </div>

      {/* DIALOG DE PRIVACIDADE */}
      {isOwnProfile && (
        <PrivacySettingsDialog
          open={privacyDialogOpen}
          onOpenChange={setPrivacyDialogOpen}
          profile={profile}
        />
      )}
    </div>
  );
}
