import React, { useState } from 'react';
import { base44 } from '@/api/base44Client';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Label } from '@/components/ui/label';
import { Textarea } from '@/components/ui/textarea';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Calendar } from '@/components/ui/calendar';
import { Popover, PopoverContent, PopoverTrigger } from '@/components/ui/popover';
import { toast } from 'sonner';
import { DollarSign, Calendar as CalendarIcon, Loader2, TrendingUp, CheckCircle } from 'lucide-react';
import { format } from 'date-fns';
import { ptBR } from 'date-fns/locale';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { Badge } from '@/components/ui/badge';

export default function ProfitImportPage() {
  const queryClient = useQueryClient();
  
  const [dateRange, setDateRange] = useState({
    from: null,
    to: null
  });
  const [profitValue, setProfitValue] = useState('');
  const [notes, setNotes] = useState('');

  // Carregar registros existentes
  const { data: records = [] } = useQuery({
    queryKey: ['profitRecords'],
    queryFn: async () => {
      const user = await base44.auth.me();
      return await base44.entities.ProfitRecord.filter({ created_by: user.email }, '-record_date');
    }
  });

  const importMutation = useMutation({
    mutationFn: async (data) => {
      const user = await base44.auth.me();
      return await base44.entities.ProfitRecord.create({
        ...data,
        created_by: user.email
      });
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['profitRecords'] });
      toast.success('Lucro importado com sucesso!');
      
      // Limpar formulário
      setDateRange({ from: null, to: null });
      setProfitValue('');
      setNotes('');
    },
    onError: (error) => {
      console.error('Erro ao importar:', error);
      toast.error('Erro ao importar lucro');
    }
  });

  const handleImport = async () => {
    if (!dateRange.from || !dateRange.to || !profitValue) {
      toast.error('Preencha todos os campos obrigatórios');
      return;
    }

    importMutation.mutate({
      title: `Lucro ${format(dateRange.from, 'dd/MM/yyyy')} a ${format(dateRange.to, 'dd/MM/yyyy')}`,
      amount: parseFloat(profitValue),
      record_date: new Date().toISOString(),
      period_type: 'custom',
      category: 'aposta',
      notes
    });
  };

  const deleteMutation = useMutation({
    mutationFn: (id) => base44.entities.ProfitRecord.delete(id),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['profitRecords'] });
      toast.success('Registro excluído');
    }
  });

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 p-4 md:p-8">
      <div className="max-w-4xl mx-auto">
        {/* Header */}
        <div className="mb-8">
          <h1 className="text-3xl md:text-4xl font-bold text-white flex items-center gap-3">
            <DollarSign className="w-10 h-10 text-green-500" />
            Importar Lucros
          </h1>
          <p className="text-slate-400 mt-2">
            Adicione lucros obtidos em períodos específicos
          </p>
        </div>

        <div className="grid lg:grid-cols-2 gap-6">
          {/* Formulário */}
          <Card className="bg-slate-800/50 border-slate-700">
            <CardHeader className="border-b border-slate-700">
              <CardTitle className="text-white">Novo Registro</CardTitle>
            </CardHeader>
            <CardContent className="pt-6 space-y-6">
              {/* Date Range */}
              <div>
                <Label className="text-slate-300 mb-2 block">Período</Label>
                <div className="grid grid-cols-2 gap-3">
                  <Popover>
                    <PopoverTrigger asChild>
                      <Button variant="outline" className="justify-start text-left bg-slate-900 border-slate-700 text-white hover:bg-slate-800">
                        <CalendarIcon className="mr-2 h-4 w-4" />
                        {dateRange.from ? format(dateRange.from, 'PPP', { locale: ptBR }) : 'Data inicial'}
                      </Button>
                    </PopoverTrigger>
                    <PopoverContent className="w-auto p-0 bg-slate-800 border-slate-700">
                      <Calendar
                        mode="single"
                        selected={dateRange.from}
                        onSelect={(date) => setDateRange({ ...dateRange, from: date })}
                        locale={ptBR}
                        className="bg-slate-800 text-white"
                      />
                    </PopoverContent>
                  </Popover>

                  <Popover>
                    <PopoverTrigger asChild>
                      <Button variant="outline" className="justify-start text-left bg-slate-900 border-slate-700 text-white hover:bg-slate-800">
                        <CalendarIcon className="mr-2 h-4 w-4" />
                        {dateRange.to ? format(dateRange.to, 'PPP', { locale: ptBR }) : 'Data final'}
                      </Button>
                    </PopoverTrigger>
                    <PopoverContent className="w-auto p-0 bg-slate-800 border-slate-700">
                      <Calendar
                        mode="single"
                        selected={dateRange.to}
                        onSelect={(date) => setDateRange({ ...dateRange, to: date })}
                        locale={ptBR}
                        className="bg-slate-800 text-white"
                      />
                    </PopoverContent>
                  </Popover>
                </div>
              </div>

              {/* Valor */}
              <div>
                <Label htmlFor="profit" className="text-slate-300">Lucro Total (R$)</Label>
                <Input
                  id="profit"
                  type="number"
                  step="0.01"
                  placeholder="0.00"
                  value={profitValue}
                  onChange={(e) => setProfitValue(e.target.value)}
                  className="mt-2 bg-slate-900 border-slate-700 text-white"
                />
                <p className="text-xs text-slate-500 mt-1">
                  Use valores negativos para prejuízos
                </p>
              </div>

              {/* Observações */}
              <div>
                <Label htmlFor="notes" className="text-slate-300">Observações (opcional)</Label>
                <Textarea
                  id="notes"
                  placeholder="Ex: Lucro de apostas ao vivo na Bet365"
                  value={notes}
                  onChange={(e) => setNotes(e.target.value)}
                  className="mt-2 h-24 bg-slate-900 border-slate-700 text-white"
                />
              </div>

              {/* Botão */}
              <Button
                onClick={handleImport}
                disabled={importMutation.isPending}
                className="w-full bg-gradient-to-r from-green-600 to-green-500 hover:from-green-700 hover:to-green-600"
              >
                {importMutation.isPending ? (
                  <>
                    <Loader2 className="mr-2 h-4 w-4 animate-spin" />
                    Importando...
                  </>
                ) : (
                  <>
                    <DollarSign className="mr-2 h-4 w-4" />
                    Importar Lucro
                  </>
                )}
              </Button>
            </CardContent>
          </Card>

          {/* Histórico */}
          <Card className="bg-slate-800/50 border-slate-700">
            <CardHeader className="border-b border-slate-700">
              <CardTitle className="text-white flex items-center gap-2">
                <TrendingUp className="w-5 h-5 text-blue-400" />
                Histórico
              </CardTitle>
            </CardHeader>
            <CardContent className="pt-6">
              {records.length === 0 ? (
                <div className="text-center py-12 text-slate-500">
                  <DollarSign className="w-16 h-16 mx-auto mb-4 text-slate-600" />
                  <p>Nenhum registro ainda</p>
                </div>
              ) : (
                <div className="space-y-3 max-h-[500px] overflow-y-auto">
                  {records.map((record) => (
                    <Card key={record.id} className="bg-slate-900/50 border-slate-700">
                      <CardContent className="p-4">
                        <div className="flex items-start justify-between mb-2">
                          <div className="flex-1">
                            <p className="font-semibold text-white text-sm">{record.title}</p>
                            <p className="text-xs text-slate-400 mt-1">
                              <CalendarIcon className="w-3 h-3 inline mr-1" />
                              {format(new Date(record.record_date), 'dd/MM/yyyy')}
                            </p>
                          </div>
                          <Button
                            variant="ghost"
                            size="sm"
                            onClick={() => deleteMutation.mutate(record.id)}
                            className="text-red-400 hover:text-red-300 hover:bg-red-900/20"
                          >
                            Excluir
                          </Button>
                        </div>
                        <div className="flex items-center justify-between">
                          <p className={`text-2xl font-bold ${
                            record.amount >= 0 ? 'text-green-400' : 'text-red-400'
                          }`}>
                            {record.amount >= 0 ? '+' : ''}R$ {record.amount.toFixed(2)}
                          </p>
                          {record.amount >= 0 && (
                            <Badge className="bg-green-600">
                              <CheckCircle className="w-3 h-3 mr-1" />
                              Lucro
                            </Badge>
                          )}
                        </div>
                        {record.notes && (
                          <p className="text-xs text-slate-400 mt-2">{record.notes}</p>
                        )}
                      </CardContent>
                    </Card>
                  ))}
                </div>
              )}
            </CardContent>
          </Card>
        </div>
      </div>
    </div>
  );
}
